{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": [
    "apps/backend/**/*.ts",
    "apps/backend/**/*.tsx",
    "apps/frontend/**/*.ts",
    "apps/frontend/**/*.tsx"
  ]
}